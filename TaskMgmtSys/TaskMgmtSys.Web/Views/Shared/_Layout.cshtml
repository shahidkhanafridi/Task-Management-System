<!DOCTYPE html>
<html lang="en" ng-app="taskApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Management System</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons-1.2.2/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @* <link href="~/TaskManagementSystem.styles.css" rel="stylesheet" /> *@

    @await RenderSectionAsync("Styles", required: false)
</head>
<body ng-controller="layoutController">

    <!-- ====== Navbar ====== -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">TaskManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarMain" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Projects" asp-action="Index">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">Users</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="TaskItems" asp-action="Index">Tasks</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ====== Main Body ====== -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- ====== Footer ====== -->
    <footer class="text-center text-muted mt-5 mb-3">
        <hr />
        <p>&copy; @(DateTime.Now.Year) - Task Management System</p>
    </footer>

    <!-- ====== Scripts ====== -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular/angular-route.min.js"></script>
    <script src="~/js/app.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>