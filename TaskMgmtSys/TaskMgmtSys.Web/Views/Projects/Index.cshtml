@using Newtonsoft.Json
@model IEnumerable<TaskMgmtSys.Web.Entities.Project>
@{
    ViewData["Title"] = "Projects";
}

<div ng-controller="projectsController" class="mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0">Projects</h2>
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle"></i> New Project
        </a>
    </div>

    <div class="mb-3">
        <input type="text" ng-model="searchText" class="form-control" placeholder="Search projects..." />
    </div>

    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Project Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Created At</th>
                <th style="width: 100px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="p in filteredProjects = (projects | filter:searchText)">
                <td>{{$index + 1}}</td>
                <td>{{p.ProjectName}}</td>
                <td>{{p.Description || '-'}}</td>
                <td>
                    <span class="badge bg-success" ng-if="p.isActive">Active</span>
                    <span class="badge bg-secondary" ng-if="!p.isActive">Inactive</span>
                </td>
                <td>{{p.createdAt | date:'medium'}}</td>
                <td>
                    <a href="/Projects/Edit/{{p.Id}}" class="btn btn-sm btn-outline-primary me-1">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <button class="btn btn-sm btn-outline-danger" ng-click="deleteProject(p.Id)">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
            <tr ng-if="filteredProjects.length === 0">
                <td colspan="6" class="text-center text-muted py-3">No projects found</td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        app.controller("projectsController", function ($scope, $http) {
            // Initialize from server data
            $scope.projects = @Html.Raw(JsonConvert.SerializeObject(Model))

            $scope.deleteProject = function (id) {
                if (!confirm("Are you sure you want to delete this project?")) return;

                $http.post(`/Projects/Delete/${id}`).then(
                    function (response) {
                        if (response.data.success) {
                            $scope.projects = $scope.projects.filter(p => p.id !== id);
                        }
                    },
                    function (error) {
                        alert("Error deleting project.");
                    }
                );
            };
            
        });
    </script>
}