@{
    ViewData["Title"] = "Create Project";
}

<div ng-controller="projectFormController" class="mt-4">
    <h2 class="text-center mb-4">Create New Project</h2>

    <form name="projectForm" ng-submit="saveProject()" novalidate>
        @Html.AntiForgeryToken()
        <div class="form-group mb-3">
            <label>Project Name</label>
            <input type="text" class="form-control" name="projectName"
                   ng-model="project.projectName" required />
            <span class="text-danger" ng-show="projectForm.$submitted && projectForm.projectName.$error.required">
                Project name is required.
            </span>
        </div>

        <div class="form-group mb-3">
            <label>Description</label>
            <textarea class="form-control" name="description" ng-model="project.description"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Projects" class="btn btn-secondary ms-2">Cancel</a>
    </form>

    <div class="alert alert-success mt-3" ng-if="successMessage">{{ successMessage }}</div>
    <div class="alert alert-danger mt-3" ng-if="errorMessage">{{ errorMessage }}</div>
</div>

@section Scripts {
    <script src="~/js/controllers/projectFormController.js"></script>
}